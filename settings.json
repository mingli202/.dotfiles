// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "VictorMono Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Light",
    "dark": "Gruvbox Material"
  },
  "autosave": "off",
  "relative_line_numbers": true,
  "terminal": {
    "detect_venv": "off"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "use_auto_surround": false,
  "auto_signature_help": null,

  "languages": {
    "Java": {
      "formatter": "language_server"
    }
  },

  "experimental.theme_overrides": {
    "renamed.background": "#68948ad3",
    "search.match_background": "#3b4439",
    "ghost_element.background": "#29282810",
    "ghost_element.hover": "#38343299",
    "background.appearance": "blurred",
    "background": "#292828CC",
    "editor.background": "#29282810",
    "editor.gutter.background": "#29282810",
    "title_bar.background": "#292828DF",
    "toolbar.background": "#29282810",
    "terminal.background": "#00000000",
    "status_bar.background": "#292828DF",
    "tab.active_background": "#383432",
    "tab.inactive_background": "#00000000",
    "tab_bar.background": "#29282810",
    "panel.background": "#29282810",
    "border": "#00000000",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.thumb.background": "#00000000",
    "scrollbar.thumb.border": "#00000000",
    "editor.active_line.background": "#00000000"
  }
}
